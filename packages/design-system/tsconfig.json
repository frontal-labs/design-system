{
	"extends": "@frontal/typescript-config/react.json",
	"compilerOptions": {
		"baseUrl": ".",
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": false,
		"composite": false,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"paths": {
			"@/*": ["./src/*"],
			"@frontal/blocks": ["../blocks/src/index.ts"],
			"@frontal/charts": ["../charts/src/index.ts"],
			"@frontal/colors": ["../colors/src/index.ts"],
			"@frontal/components": ["../components/src/index.ts"],
			"@frontal/icons": ["../icons/src/index.ts"],
			"@frontal/typeface": ["../typeface/src/index.ts"],
			"@frontal/ui": ["../ui/src/index.ts"],
			"@frontal/*": ["../../*/src", "../../*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "dist", "build.ts", "tests"]
}
