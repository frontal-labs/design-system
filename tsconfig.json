{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@frontal-ds/blocks": ["./packages/blocks/src/index.ts"],
			"@frontal-ds/blocks/*": ["./packages/blocks/src/*"],
			"@frontal-ds/charts": ["./packages/charts/src/index.ts"],
			"@frontal-ds/charts/*": ["./packages/charts/src/*"],
			"@frontal-ds/colors": ["./packages/colors/src/index.ts"],
			"@frontal-ds/colors/*": ["./packages/colors/src/*"],
			"@frontal-ds/design-system": ["./packages/design-system/src/index.ts"],
			"@frontal-ds/design-system/*": ["./packages/design-system/src/*"],
			"@frontal-ds/icons": ["./packages/icons/src/index.ts"],
			"@frontal-ds/icons/*": ["./packages/icons/src/*"],
			"@frontal-ds/typeface": ["./packages/typeface/src/index.ts"],
			"@frontal-ds/typeface/*": ["./packages/typeface/src/*"],
			"@frontal-ds/ui": ["./packages/ui/src/index.ts"],
			"@frontal-ds/ui/*": ["./packages/ui/src/*"]
		}
	},
	"include": ["index.ts"],
	"exclude": ["node_modules", "dist", "build.ts", "tests", "**/node_modules", "packages", "apps", "example", "tools"]
}
