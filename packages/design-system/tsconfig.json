{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"],
			"@frontal/*": [
				"../../packages/*",
				"../../internals/*",
				"../../services/*",
				"../../testing/*",
				"../../pipelines/*"
			],
			"@frontal/design-system/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
