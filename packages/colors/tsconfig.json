{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "paths": {
      "@/*": ["./src/*"],
      "@frontal-ds/colors/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "build.ts"]
}
