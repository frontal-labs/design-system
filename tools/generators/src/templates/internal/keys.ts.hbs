/**
 * Environment configuration keys for {{packageName}}
 */

import { createEnv } from "@t3-oss/env-core";
import { z } from "zod";

export const keys = createEnv({
  server: {
{{#each envVars}}
    {{name}}: {{#ifEquals type "number"}}z.string().transform(Number){{else ifEquals type "boolean"}}z.enum(["true", "false"]).transform((v) => v === "true"){{else}}z.string(){{/ifEquals}}{{#unless required}}.optional(){{/unless}}{{#if default}}.default("{{default}}"){{/if}},
{{/each}}
  },
  runtimeEnv: process.env,
  emptyStringAsUndefined: true,
});
