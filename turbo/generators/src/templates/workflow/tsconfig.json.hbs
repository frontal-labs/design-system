{
  "extends": "@frontal/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["bun"],
    "lib": ["esnext"],
    "paths": {
      "{{packageName}}/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
