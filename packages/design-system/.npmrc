# NPM configuration for @frontal/design-system
# This file ensures consistent behavior across different environments

# Use exact versions (lockfile handles this)
save-exact=false

# Don't create package-lock.json (using bun.lock)
package-lock=false

# Auto-install peer dependencies
legacy-peer-deps=false

# Don't run scripts automatically (security)
ignore-scripts=false

# GitHub Packages registry configuration
@frontal:registry=https://npm.pkg.github.com
//npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}
