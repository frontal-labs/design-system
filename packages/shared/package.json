{
	"name": "@frontal/shared",
	"description": "Frontal's shared utilities and helpers",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "rollup -c",
		"lint": "biome check",
		"lint:fix": "biome check --write --unsafe",
		"format": "biome format --write",
		"check": "biome check",
		"check:fix": "biome check --write",
		"type-check": "tsc --noEmit",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"clean": "git clean -xdf -- node_modules .next .turbo .cache dist"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE.md",
		"CONTRIBUTING.md"
	],
	"dependencies": {
		"clsx": "^2.1.1",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"date-fns": "^4.1.0",
		"zod": "^4.1.12"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@rollup/plugin-alias": "^5.1.1",
		"@rollup/plugin-commonjs": "^27.0.0",
		"@rollup/plugin-node-resolve": "^15.0.0",
		"@rollup/plugin-swc": "^0.4.0",
		"@rollup/plugin-typescript": "^12.0.0",
		"@types/node": "^24.7.0",
		"@vitest/coverage-v8": "^3.1.4",
		"rollup": "^4.0.0",
		"tsx": "^4.7.1",
		"typescript": "^5.9.3",
		"vitest": "^3.1.4"
	},
	"keywords": [
		"shared",
		"utilities",
		"helpers"
	],
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
