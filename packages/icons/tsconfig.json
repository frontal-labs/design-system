{
	"extends": "@frontal/typescript-config/react.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": false,
		"skipLibCheck": true,
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"types": ["bun-types"],
		"paths": {
			"@/*": ["./src/*"],
			"@frontal/*": ["../../*"],
			"@frontal/icons/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
