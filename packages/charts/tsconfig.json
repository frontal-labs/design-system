{
	"extends": "../../internal/typescript-config/react.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": false,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"@frontal/*": [
				"../../*",
				"../../../internals/*",
				"../../services/*",
				"../../testing/*"
			],
			"@frontal/charts/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "dist", "tests", "vitest.config.ts"]
}
