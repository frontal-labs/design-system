{
  "name": "@frontal-labs/charts",
  "description": "Frontal's chart and visualization components",
  "version": "0.0.2",
  "type": "module",
  "packageManager": "bun@1.3.3",
  "engines": {
    "bun": ">=1.1.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontal-labs/design-system.git",
    "directory": "packages/charts"
  },
  "scripts": {
    "build": "bun run build.ts",
    "build:bundle": "bun run build.ts --minify",
    "lint": "biome check",
    "lint:fix": "biome check --write --unsafe",
    "format": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "type-check": "tsc",
    "clean": "git clean -xdf -- node_modules .next .cache",
    "test": "bun test tests/"
  },
  "dependencies": {
    "@frontal-labs/icons": "workspace:*",
    "@frontal-labs/ui": "workspace:*",
    "recharts": "^3.7.0"
  },
  "peerDependencies": {
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@frontal/style-guide": "github:frontal-labs/style-guide",
    "@biomejs/biome": "2.3.4",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "^19.2.9",
    "tailwindcss": "^4.1.14",
    "postcss": "^8.5.6",
    "puppeteer": "^24.26.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "charts",
    "visualization",
    "data-viz"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@frontal-labs:registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
