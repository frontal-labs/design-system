{
	"name": "@frontal/typeface",
	"description": "Frontal's typeface",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.3",
	"engines": {
		"bun": ">=1.1.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./fonts.css": "./src/styles/fonts.css",
		"./styles.css": "./src/styles/styles.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/frontal-labs/design-system.git",
		"directory": "packages/typeface"
	},
	"scripts": {
		"build": "bunx @frontal/builder build -t typeface",
		"build:bundle": "bunx @frontal/builder bundle -t typeface",
		"lint": "biome check",
		"lint:fix": "biome check --write --unsafe",
		"format": "biome format --write",
		"check": "biome check",
		"check:fix": "biome check --write",
		"type-check": "tsc --noEmit",
		"typecheck": "tsc --noEmit",
		"test": "bun test tests/",
		"clean": "git clean -xdf -- node_modules .next .cache"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"next": "16.0.10",
		"tailwind-merge": "^2.5.4"
	},
	"peerDependencies": {
		"react": "^19.2.0",
		"tailwindcss": ">=3.0.0 || insiders || >=4.0.0-alpha.20 || >=4.0.0-beta.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/node": "^24.7.0",
		"@types/react": "^19.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/postcss": "^4.1.14",
		"jsdom": "^25.0.0",
		"tsx": "^4.7.1",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"postcss": "^8.5.6",
		"puppeteer": "^24.26.1"
	},
	"keywords": [
		"typeface",
		"fonts",
		"typography"
	]
}
