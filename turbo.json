{
	"$schema": "https://turborepo.com/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"ui": "tui",
	"envMode": "loose",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "test"],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				"**/generated/**",
				"storybook-static/**",
				".react-email/**"
			]
		},
		"test": {
			"dependsOn": ["^build", "^test"]
		},
		"test:coverage": {
			"dependsOn": ["^build", "^test"]
		},
		"analyze": {
			"dependsOn": ["^analyze"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"translate": {
			"dependsOn": ["^translate"],
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"//#clean": {
			"cache": false
		}
	}
}
