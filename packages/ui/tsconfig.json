{
	"extends": "@frontal/typescript-config/react.json",
	"compilerOptions": {
		"baseUrl": ".",
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": false,
		"composite": false,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"paths": {
			"@/*": ["./src/*"],
			"@frontal/*": [
				"../../*",
				"../../*/src",
				"../../../internals/*",
				"../../../internals/*/src",
				"../../services/*",
				"../../services/*/src",
				"../../testing/*",
				"../../testing/*/src",
				"../../pipelines/*",
				"../../pipelines/*/src"
			],
			"@frontal/ui/*": ["./src/*"],
			"@frontal/ui/components/*": ["./src/components/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "dist", "build.ts"]
}
