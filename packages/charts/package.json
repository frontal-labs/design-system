{
	"name": "@frontal/charts",
	"description": "Frontal's chart and visualization components",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.3",
	"engines": {
		"bun": ">=1.1.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./styles.css": "./src/styles/styles.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/frontal-labs/design-system.git",
		"directory": "packages/charts"
	},
	"scripts": {
		"build": "bunx @frontal/builder build -t charts",
		"build:bundle": "bunx @frontal/builder bundle -t charts",
		"lint": "biome check",
		"lint:fix": "biome check --write --unsafe",
		"format": "biome format --write",
		"check": "biome check",
		"check:fix": "biome check --write",
		"type-check": "tsc --noEmit",
		"typecheck": "tsc --noEmit",
		"clean": "git clean -xdf -- node_modules .next .cache",
		"test": "bun test tests/"
	},
	"dependencies": {
		"@frontal/icons": "workspace:*",
		"@frontal/ui": "workspace:*",
		"recharts": "^2.15.4"
	},
	"peerDependencies": {
		"react": "^19.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@tailwindcss/postcss": "^4.1.14",
		"@types/node": "^24.7.0",
		"@types/react": "^19.2.1",
		"jsdom": "^25.0.0",
		"tsx": "^4.7.1",
		"tailwindcss": "^4.1.14",
		"postcss": "^8.5.6",
		"puppeteer": "^24.26.1",
		"typescript": "^5.9.3"
	},
	"keywords": [
		"charts",
		"visualization",
		"data-viz"
	]
}
