{
	"name": "design-system",
	"description": "Frontal's Design System",
	"homepage": "https://frontal.dev",
	"private": true,
	"version": "5.2.2",
	"type": "module",
	"workspaces": [
		"apps/*",
		"example/*",
		"internal/*",
		"packages/*"
	],
	"scripts": {
		"build": "bunx turbo build",
		"bundle": "bunx turbo build:bundle",
		"analyze": "build analyze",
		"clean": "build clean",
		"dev": "bunx turbo dev",
		"lint": "bunx turbo lint",
		"lint:fix": "bunx turbo lint --fix",
		"spell": "bunx cspell lint \"**/*.{ts,tsx,js,json,md}\"",
		"spell:fix": "bunx cspell lint \"**/*.{ts,tsx,js,json,md}\" --fix",
		"format": "bunx turbo format",
		"test": "bunx turbo test",
		"type-check": "bunx turbo type-check",
		"prepare": "husky",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "changeset publish",
		"postinstall": "bunx patch-package || true"
	},
	"devDependencies": {
		"@auto-it/first-time-contributor": "^11.3.0",
		"@biomejs/biome": "2.3.1",
		"@changesets/cli": "^2.27.1",
		"@commitlint/cli": "^19.4.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@frontal/style-guide": "github:frontal-labs/style-guide",
		"@turbo/gen": "^2.5.8",
		"@types/node": "^24.9.1",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
