{
	"name": "@frontal/colors",
	"description": "Frontal's color system and utilities",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./styles/colors.css": "./src/styles/colors.css"
	},
	"scripts": {
		"build": "rollup -c",
		"lint": "biome check",
		"lint:fix": "biome check --write --unsafe",
		"format": "biome format --write",
		"check": "biome check",
		"check:fix": "biome check --write",
		"type-check": "tsc --noEmit",
		"typecheck": "tsc --noEmit",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"clean": "git clean -xdf -- node_modules .next .turbo .cache dist"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE.md",
		"CONTRIBUTING.md"
	],
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@rollup/plugin-alias": "^5.1.1",
		"@rollup/plugin-commonjs": "^27.0.0",
		"@rollup/plugin-node-resolve": "^15.0.0",
		"@rollup/plugin-swc": "^0.4.0",
		"@rollup/plugin-typescript": "^12.0.0",
		"@types/node": "^24.7.0",
		"@tailwindcss/postcss": "^4.1.14",
		"rollup": "^4.0.0",
		"tsx": "^4.7.1",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"postcss": "^8.5.6",
		"puppeteer": "^24.26.1"
	},
	"keywords": [
		"colors",
		"design-tokens",
		"theme"
	],
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.1.0"
	}
}
