{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "composite": false,
    "paths": {
      "@/*": ["./src/*"],
      "@frontal-labs/blocks": ["../blocks/src/index.ts"],
      "@frontal-labs/blocks/*": ["../blocks/src/*"],
      "@frontal-labs/ui": ["../ui/src/index.ts"],
      "@frontal-labs/ui/*": ["../ui/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "build.ts", "tests"]
}
