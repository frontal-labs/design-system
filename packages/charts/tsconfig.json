{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "paths": {
      "@/*": ["./src/*"],
      "@frontal-ds/charts/*": ["./src/*"],
      "@frontal-ds/icons": ["../icons/src/index.ts"],
      "@frontal-ds/ui": ["../ui/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "tests", "vitest.config.ts", "build.ts"]
}
