{
	"name": "@frontal/ui",
	"description": "Frontal's UI component library",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "rollup -c",
		"lint": "biome check",
		"lint:fix": "biome check --write --unsafe",
		"format": "biome format --write",
		"check": "biome check",
		"check:fix": "biome check --write",
		"type-check": "tsc --noEmit",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"clean": "git clean -xdf -- node_modules .next .turbo .cache dist"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE.md",
		"CONTRIBUTING.md"
	],
	"dependencies": {
		"@frontal/primitives": "workspace:*",
		"@frontal/icons": "workspace:*",
		"@frontal/shared": "workspace:*",
		"class-variance-authority": "^0.7.1",
		"react-day-picker": "^9.11.0",
		"embla-carousel-autoplay": "^8.0.0",
		"embla-carousel-react": "^8.6.0",
		"react-resizable-panels": "^3.0.6",
		"cmdk": "^1.1.1",
		"clsx": "^2.1.1",
		"recharts": "^2.15.4",
		"input-otp": "^1.4.2",
		"tailwind-merge": "^2.5.4",
		"vaul": "^1.1.2"
	},
	"peerDependencies": {
		"react": "^19.2.0",
		"next": "^13.0.0 || ^14.0.0 || ^15.0.0 || ^16.0.0"
	},
	"peerDependenciesMeta": {
		"next": {
			"optional": true
		}
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@rollup/plugin-alias": "^5.1.1",
		"@rollup/plugin-commonjs": "^27.0.0",
		"@rollup/plugin-node-resolve": "^15.0.0",
		"@rollup/plugin-swc": "^0.4.0",
		"@rollup/plugin-typescript": "^12.0.0",
		"@types/node": "^24.7.0",
		"@types/react": "^19.2.1",
		"@vitest/coverage-v8": "^3.1.4",
		"jsdom": "^25.0.0",
		"react": "^19.2.0",
		"rollup": "^4.0.0",
		"tsx": "^4.7.1",
		"typescript": "^5.9.3",
		"postcss": "^8.5.6",
		"puppeteer": "^24.26.1",
		"vitest": "^3.1.4"
	},
	"keywords": [
		"ui",
		"components",
		"react"
	],
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
