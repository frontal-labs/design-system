{
	"name": "@frontal-labs/root",
	"description": "A modular design system for consistent, scalable, high-quality UI across Frontal platforms.",
	"author": "Frontal Labs",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"bun": ">=1.1.0"
	},
	"packageManager": "bun@1.3.3",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./styles/globals.css": "./dist/styles/globals.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/frontal-labs/design-system.git"
	},
	"scripts": {
		"build": "bun run build:root && bunx turbo build",
		"build:bundle": "bun run build:root && bunx turbo build:bundle",
		"build:root": "bun run build.ts",
		"prepublishOnly": "bun run build:root",
		"analyze": "bunx turbo analyze",
		"clean": "rm -rf dist .turbo node_modules/.cache && find . -name '.turbo' -type d -prune -exec rm -rf {} + 2>/dev/null || true",
		"dev": "bunx turbo dev",
		"lint": "bunx turbo lint",
		"lint:fix": "bunx turbo lint:fix",
		"spell": "bunx cspell lint \"**/*.{ts,tsx,js,json,md}\"",
		"spell:fix": "bunx cspell lint \"**/*.{ts,tsx,js,json,md}\" --fix",
		"format": "bunx turbo format",
		"test": "bunx turbo test",
		"test:coverage": "bunx turbo test:coverage",
		"type-check": "bunx turbo type-check",
		"prepare": "husky",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "changeset publish",
		"postinstall": "bunx patch-package || true"
	},
	"devDependencies": {
		"@auto-it/first-time-contributor": "^11.3.0",
		"@biomejs/biome": "2.3.11",
		"@changesets/cli": "^2.27.1",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@frontal/style-guide": "github:frontal-labs/style-guide",
		"@turbo/gen": "^2.5.8",
		"@types/node": "^25.0.9",
		"husky": "^9.0.11",
		"lint-staged": "^16.2.7",
		"tsup": "^8.5.0",
		"turbo": "^2.5.8",
		"typescript": "^5.9.3",
		"vitest": "^4.0.3"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@frontal-labs/design-system": "workspace:*",
		"commander": "^14.0.2",
		"object-assign": "^4.1.1",
		"styled-jsx": "^5.1.7"
	},
	"peerDependencies": {
		"react": "^19.2.0"
	},
	"workspaces": [
		"apps/*",
		"example/*",
		"packages/*",
		"turbo/*"
	],
	"keywords": [
		"frontal",
		"design",
		"system",
		"ui",
		"components",
		"react",
		"tailwind",
		"css",
		"javascript",
		"typescript",
		"hooks",
		"utilities",
		"helpers"
	]
}
