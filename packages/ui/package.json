{
  "name": "@frontal-labs/ui",
  "description": "Frontal's UI component library",
  "version": "0.0.2",
  "type": "module",
  "packageManager": "bun@1.3.3",
  "engines": {
    "bun": ">=1.1.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontal-labs/design-system.git",
    "directory": "packages/ui"
  },
  "scripts": {
    "build": "bun run build.ts",
    "build:bundle": "bun run build.ts --minify",
    "lint": "biome check",
    "lint:fix": "biome check --write --unsafe",
    "format": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "type-check": "tsc",
    "clean": "git clean -xdf -- node_modules .next .cache",
    "test": "bun test tests/"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@frontal-labs/icons": "workspace:*",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "embla-carousel-autoplay": "^8.0.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "react-day-picker": "^9.11.0",
    "react-hook-form": "^7.64.0",
    "react-resizable-panels": "^4.4.1",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.14",
    "vaul": "^1.1.2"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0 || ^16.0.0",
    "react": "^19.2.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@frontal/style-guide": "github:frontal-labs/style-guide",
    "@biomejs/biome": "2.3.4",
    "@types/react": "^19.2.8",
    "postcss": "^8.5.6",
    "puppeteer": "^24.26.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "ui",
    "components",
    "react"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@frontal-labs:registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
